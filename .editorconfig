# https://editorconfig.org

# Top-most EditorConfig file.
root = true

# Defaults for most files.
[*]
# Godot prefers LF and does not generate BOMs.
# Apply the same everywhere for simplicity.
end_of_line = lf
charset = utf-8
# Preferences.
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[**.csproj]
indent_size = 2

[**.cs]
csharp_style_namespace_declarations = file_scoped:warning
